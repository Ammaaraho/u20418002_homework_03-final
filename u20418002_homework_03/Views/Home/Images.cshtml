@model List<u20418002_homework_03.Models.FileModel>

@{
    ViewBag.Title = "Images";
}

<h2>Images of any File Type</h2>

<h5>.............."Media/Documents/Images" folder</h5>

<br />

<div class="container-fluid">

    <div class="row gallary">
        @foreach (var file in Model)
        {
            <div class="col-lg-4">
                <div class="card" style="width: 18rem;">
                    <a href="@Url.Content("~/Content/Media/Images/"+file.FileName)">
                        <img class="card-img-top" height="200" width="150" src="~/Content/Media/Images/@file.FileName" alt="Card image cap">
                    </a>
                    <div class="card-body">
                        <h5 class="card-title">@file.FileName</h5>
                        @Html.ActionLink("Downlaod", "DownloadImage", new { fileName = file.FileName }, new { @class = "btn btn-success" })
                        @Html.ActionLink("Delete", "DeleteImage", new { fileName = file.FileName }, new { @class = "btn btn-danger" })
                    </div>
                </div>
                <br />
            </div>
        }
    </div>
</div>

